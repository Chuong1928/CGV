<section class="container">
            <div class="col-sm-8 col-md-9">
                <div class="movie" data-phim="<%= @film.id %>">
                    <h2 class="page-heading p-0 text-uppercase font-weight-bold "><i class="fas fa-film mr-3"></i><%= @film.name %></h2>
                    
                    <div class="movie__info">
                        <div class="col-sm-6 col-md-4 movie-mobile">
                            <div class="movie__images">
                                <span class="movie__rating">5.0</span>
                                <img alt='' src="<%= @film.image_url %>" style = "height:350px;width:400px">
                            </div>
                        </div>

                        <div class="col-sm-6 col-md-8">
                                <p class="movie__time"><%= @film.time %></p>

                                <p class="movie__option"><strong>Quốc gia: </strong><%= @film.country %></p>
                                <p class="movie__option"><strong>Thể loại: </strong><%= @film.film_type.name %></p>
                                <p class="movie__option"><strong>Ngày công chiếu: </strong><%= @film.release_date %></p>
                                <p class="movie__option"><strong>Đạo diễn: </strong><%= @film.director %></p>
                                <p class="movie__option"><strong>Diễn viên: </strong><%= @film.actors %></p>
                                <p class="movie__option"><strong>Giới hạn độ tuổi: </strong>PHIM CẤM KHÁN GIẢ DƯỚI <%= @film.age_limit %> TUỔI</p>

                            <a href="#" class="comment-link">Comments:  15</a>
                            <div class="social social--hide" style="margin-top:30px;">
                                <span class="social__name">Share:</span>
                                <a href="#" class="social__variant social--first fa fa-facebook"></a>
                                <a href="#" class="social__variant social--second fa fa-twitter"></a>
                                <a href="#" class="social__variant social--third fa fa-vk"></a>
                            </div>
                            <div class="movie__btns">
                                <a href="#" class="btn btn-md btn--warning">book a ticket for this movie</a>
                                <a href="#" class="watchlist">Add to watchlist</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="clearfix"></div>
                    
                    <h2 class="page-heading p-0 text-uppercase font-weight-bold"><i class="fas fa-file-alt mr-2"></i>Review</h2>

                    <p class="movie__describe"><%= @film.plot %> </p>


                </div>

                <h2 class="page-heading text-uppercase font-weight-bold p-0"><i class="fas fa-ticket-alt"></i> Suất chiếu</h2>
                <div>
                    <div class="datepicker">
                     <%= form_with  do |f| %>
                            <span class="datepicker__marker"><i class="fa fa-calendar"></i>Ngày chiếu </span>
                            <div>
                                <%= f.date_field :day_show_film,class: "form-control", autofocus: true , as: :date, value: f.object.try(:strftime,"%m/%d/%Y") %>
                            </div>
                    <% end %>
                    </div>
                    <div class="time-select" id = "screen_show">

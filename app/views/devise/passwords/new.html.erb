    </div>
  <div class="p-2">
      <div class="alert alert-success text-center mb-4" role="alert">
          Enter your Email and instructions will be sent to you!
      </div>
       <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="f-email form-group">
                  <label for="email" class="label-group">Email của bạn</label> 
                  <%= f.text_field :email, autofocus: true, autocomplete: "email" , placeholder: 'Your email', class: "form-control" %>
                  <p class="reset-magin error-mes">.</p>
                  
            </div>

          <div class="actions mt-4">
            <button type="submit" class="btn btn-primary btn-block waves-effect waves-light" data-ripple="">Đăng Ký</button>
          </div>
        <% end %>
       <div class="mt-4 text-center">
           <a href="<%= new_session_path(resource_name)	 %>" class="text-muted"><i class="fas fa-sign-in-alt mr-1"></i> Đăng nhập ngay !</a>
      </div>
  </div>


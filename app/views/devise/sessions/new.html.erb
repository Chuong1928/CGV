<h1 class="mt-0">Đăng Nhập</h1>
<div class="we-login-register"> 
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group">
                <label for="username" >Email của bạn</label> 
                <%= f.text_field :email, autofocus: true, autocomplete: "email" , placeholder: 'Your email', class: 'form-control' %>
        </div>

    
        <div class="form-group">
                <label for="userpassword">Mật khẩu</label> 
                <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control' %> 
        </div>          

         <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="customControlInline">
            <label class="custom-control-label" for="customControlInline">Remember me</label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary btn-block waves-effect waves-ligh" data-ripple="">Đăng Nhập</button>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
    
    <div class="text-center my-3"> 
        <span class="text-center "> OR </span>
    </div>
    <div class="text-center">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Đăng ký tại đây !", new_registration_path(resource_name), class: "btn w-75 btn-success" %><br />
        <% end %>
    </div>
    
</div>

 <div class="we-login-register">
    <h1 class="mt-0">Đăng ký tài khoản</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "register-form-1", :class => "form-horizontal"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="f-accname form-group">
              <label for="accname" class="label-group">Họ Và Tên</label> 
                  <%= f.text_field :name, autofocus: true, autocomplete: "UserName" , placeholder: 'Họ và tên', class: "form-control" %> 
                  <p class="reset-magin error-mes">.</p>
        </div>
        <div class="f-email form-group">
              <label for="email" class="label-group">Địa chỉ email</label> 
              <%= f.text_field :email, autofocus: true, autocomplete: "email" , placeholder: 'Email', class: "form-control" %>
              <p class="reset-magin error-mes">.</p>
        </div> 

        <div class="f-pass form-group">
              <label for="password" class="label-group">Mật khẩu <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> kí tự tối thiểu.)</em>
                <% end %><br /></label> 
               
              <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Mật khẩu', class: "form-control" %> 
              <p class="reset-magin error-mes">.</p>   
        </div>
        <div class="f-cfpass form-group">
                  <label for="cfpassword" class="label-group">Xác nhận mật khẩu</label> 
                  <%= f.password_field :password_confirmation, autocomplete: "current-password", placeholder: 'Xác nhận mật khẩu', class: "form-control" %> 
                  <p class="reset-magin error-mes">.</p>
        </div>
        <div class="actions mt-4">
          <button type="submit" class="btn btn-primary btn-block waves-effect waves-light" data-ripple="">Đăng Ký</button>
        </div>
    <% end %>

        <div class="text-center my-3"> 
            <span class="text-center "> OR </span>
        </div>
        <div class="mt-2 mb-5 text-center">
              <a href="<%= new_session_path(resource_name)	 %>" class="text-muted"><i class="fas fa-sign-in-alt mr-1"></i> Đăng nhập ngay !</a>
        </div>
</div>
<%= render partial: "shared/topnav" %>
<!-- Main content -->
<section class="container">
   <div class="col-sm-12">
        <h2 class="p-0 page-heading"><i class="fas fa-video"></i> Phim HOT</h2>
        <div class="select-area py-3 d-flex justify-content-end">
                            <div class=" px-2" style="width:200px;">
                                <i class="fas fa-sort-alpha-up"></i>
                                 <%= sort_link(@search, :name, 'Tên Phim') %>  
                                   
                            </div>
                             <div class=" px-2" style="width:200px;">
                                <i class="fas fa-sort-amount-up-alt"></i>
                                 <%= sort_link(@search, :release_date, 'Ngày công chiếu') %>  
                                   
                            </div>                   
         </div>
         <div class="row">
            
                <% @films.each do |film | %>
                     <div class="col-sm-4 col-md-3">
                            <div class="gallery-item">
                                <a href='<%= film.trailer_link %>' class="trailer-sample gallery-item__image gallery-item--photo">
                                    <img src="<%= film.image_url %>" style = "height:350px;width:400px">
                                </a>
                                <div  style="height:40px"> <strong class="text-center w-100"><%= film.name %></strong></div>
                                <p class="mb-0"><strong>Thời lượng: </strong><%= film.time %> Phút</p>
                                <p><strong>Khởi chiếu: </strong><%= film.release_date.to_date.strftime("%d/%m/%Y") %> </p>
                                <div>
                                    <a href='<%= film_path(film) %>' class="float-left gallery-item__descript gallery-item--photo-link">
                                        <span class="gallery-item__icon"><i class="fa fa-camera"></i></span>
                                        <p class="gallery-item__name">Chi Tiết</p>
                                    </a>
                               
                                    <a href='<%= film_ticket_order_index_path(film) %>' class="float-right gallery-item__descript gallery-item--photo-link">
                                        <span class="gallery-item__icon"><i class="fas fa-ticket-alt"></i></span>
                                        <p class="gallery-item__name">Mua Vé</p>
                                    </a>
                                </div>
                            </div>
                      </div>
                <% end %>
              
    
        </div>
        <div class="pagination paginatioon--full">
            <a href='#' class="pagination__prev">prev</a>
            <a href='#' class="pagination__next">next</a>
        </div>
    </div>
</section>